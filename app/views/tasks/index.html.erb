<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <ul>
      <% if task.completed %>
      <li>
        <i class="far fa-check-square"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
      <% else %>
      <li>
        <i class="far fa-square"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
      <% end %>
  </ul>
<% end %>

<%= link_to "Create new task", new_task_path %>
