<h1>Update Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.submit %>
<% end %>

<p>
  <%= link_to "Update task", edit_task_path %>
</p>

<p>
  <%= link_to "Back to list", tasks_path %>
</p>


